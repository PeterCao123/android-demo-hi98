<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_key_ws_server_url"
        android:inputType="textUri"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:title="@string/pref_ws_server_url" />

    <EditTextPreference
        android:key="@string/pref_key_ws_client_id"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:title="@string/pref_ws_client_id" />

    <EditTextPreference
        android:key="@string/pref_key_ws_secret_key"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:title="@string/pref_ws_secret_key" />

</PreferenceScreen>
