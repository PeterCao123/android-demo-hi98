<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RootContainer">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Label" parent="Element">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Label.Smallest">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="Text" parent="Element">
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="Text.End">
        <item name="android:gravity">center_vertical|end</item>
    </style>
    <style name="Input" parent="Element">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:paddingRight">48dp</item>
    </style>

    <style name="Button" parent="Element">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Logo">
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Logo.Normal">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">144dp</item>
    </style>
    <style name="Logo.Small">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
